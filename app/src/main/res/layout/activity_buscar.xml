<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Buscar por Ubicación"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="101dp"
        android:text="Ubicación"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="82dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="207dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:text="Buscar por Código"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="196dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textCodigo"
        android:layout_alignStart="@+id/textView7"
        android:text="Codigo"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="215dp"
        android:layout_alignLeft="@+id/textView7" />

    <EditText
        android:id="@+id/textCodigo"
        android:layout_width="207dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="202dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="198dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="69dp"
        android:layout_height="47dp"
        android:layout_alignTop="@+id/textCodigo"
        android:layout_toEndOf="@+id/spinner"
        android:onClick="startScanner"
        app:srcCompat="@drawable/codigo_barras"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="234dp"
        android:layout_toRightOf="@+id/spinner" />


    <Button
        android:id="@+id/button2"
        android:layout_width="207dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="176dp"
        android:onClick="buscarCodigo"
        android:text="Buscar"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="327dp"
        android:background="@drawable/buttonshape"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="215dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="452dp" />
</RelativeLayout>   
