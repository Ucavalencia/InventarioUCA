<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uca.firebasetest.Informes"
    tools:layout_editor_absoluteY="81dp">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="368dp"
        android:layout_height="108dp"
        android:layout_marginTop="28dp"
        tools:layout_editor_absoluteX="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

             <RadioButton
                android:id="@+id/rbMostradores"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="MOSTRADORES"/>

             <RadioButton
                 android:id="@+id/rbPuertas"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="PUERTAS" />

    </RadioGroup>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="176dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlMostradores"
        android:layout_width="312dp"
        android:layout_height="229dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="236dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textATB"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="ATB" />

        <TextView
            android:id="@+id/textBTP"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/textATB"
            android:text="BTP" />

        <TextView
            android:id="@+id/txtMonitor"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/textBTP"
            android:text="Monitor" />

        <TextView
            android:id="@+id/txtTeclado"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/txtMonitor"
            android:text="Teclado" />

        <TextView
            android:id="@+id/txtCPU"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/txtTeclado"
            android:text="CPU" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPuertas"
        android:layout_width="312dp"
        android:layout_height="189dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="292dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textBGR"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="BGR" />

        <TextView
            android:id="@+id/txtMonitorP"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/textBGR"
            android:text="Monitor" />

        <TextView
            android:id="@+id/txtTecladoP"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/txtMonitorP"
            android:text="Teclado" />

        <TextView
            android:id="@+id/txtCPUP"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/txtTecladoP"
            android:text="CPU" />
    </RelativeLayout>

    <Button
        android:id="@+id/botonBuscar"
        android:layout_width="92dp"
        android:layout_height="37dp"
        android:layout_marginLeft="256dp"
        android:layout_marginStart="256dp"
        android:layout_marginTop="176dp"
        android:text="Buscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
